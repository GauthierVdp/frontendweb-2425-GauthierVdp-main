{
  "name": "webservices-bilbiotheek",
  "version": "1.0.0",
  "description": "Demo application for the course Web Services.",
  "main": "index.ts",
  "repository": "git@github.com:HOGENT-frontendweb/webservices-bilbiotheek.git",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.4.0",
  "scripts": {
    "start:dev": "tsx watch --env-file .env --inspect=0.0.0.0:9001 src/index.ts",
    "build": "tsc",
    "lint": "eslint .",
    "migrate:dev": "prisma migrate dev",
    "migrate:test": "env-cmd -f .env.test prisma migrate dev --skip-seed",
    "test": "mocha -r ts-node/register \"test/**/*.test.ts\"",
    "test:coverage": "env-cmd -f .env.test jest --runInBand --coverage",
    "prisma:migrate": "prisma migrate dev --schema=src/data/schema.prisma",
    "prisma:seed": "ts-node src/data/seed.ts"
  },
  "prisma": {
    "schema": "src/data/schema.prisma",
    "seed": "tsx ./src/data/seed.ts"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "@prisma/client": "^5.19.1",
    "@types/chai": "^5.0.1",
    "argon2": "^0.41.1",
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "config": "^3.3.12",
    "dotenv": "^17.2.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^8.0.1",
    "koa2-swagger-ui": "^5.10.0",
    "prisma": "^5.19.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "winston": "^3.14.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@stylistic/eslint-plugin": "^2.8.0",
    "@types/chai-as-promised": "^8.0.1",
    "@types/config": "^3.3.4",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.2.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6",
    "env-cmd": "^10.1.0",
    "eslint": "^9.10.0",
    "eslint-plugin-jest": "^28.8.3",
    "jest": "^29.7.0",
    "mocha": "11.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.17.0",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.5.0"
  },
  "engines": {
    "node": "20.6.0",
    "yarn": "4.4.0"
  }
}
