generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model author {
  id   Int    @id @default(autoincrement())
  name String
  book book[] @relation("authorsonbooks")
}

model book {
  id           Int            @id @default(autoincrement())
  title        String
  borrowrecord borrowrecord[]
  author       author[]       @relation("authorsonbooks")
  genre        genre[]        @relation("genresonbooks")
}

model borrowrecord {
  id         Int       @id @default(autoincrement())
  borrowDate DateTime
  returnDate DateTime?
  bookId     Int
  memberId   Int
  book       book      @relation(fields: [bookId], references: [id], map: "BorrowRecord_bookId_fkey")
  member     member    @relation(fields: [memberId], references: [id], map: "BorrowRecord_memberId_fkey")

  @@index([bookId], map: "BorrowRecord_bookId_fkey")
  @@index([memberId], map: "BorrowRecord_memberId_fkey")
}

model genre {
  id   Int    @id @default(autoincrement())
  name String
  book book[] @relation("genresonbooks")
}

model member {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique(map: "Member_email_key")
  password_hash String
  roles         Json
  borrowrecord  borrowrecord[]
}

model user {
  id            Int    @id @default(autoincrement())
  name          String
  email         String @unique(map: "User_email_key")
  password_hash String
  roles         Json
}
